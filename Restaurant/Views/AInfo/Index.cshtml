@model IEnumerable<Restaurant.Models.Entities.Info>

@{
    ViewBag.Title = "تنظیمات سایت";
}
<p class="navbar-left">
    @Html.ActionLink("برگشت به پنل ادمین", "Index","Admin")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        تنظیمات سایت
    </div>
    <div class="panel-body text-center text-justify">
        @foreach (var item in Model)
        {
            <table class="table table-hover table-condensed table-responsive">
                <tr>
                    <th class="col-md-3 active">
                        نام رستوران :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
                <tr>
                    <th class="col-md-3 active">
                        ظرفیت رستوران :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                </tr>
                <tr>
                    <th class="col-md-3 active">
                        درباره ما :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.About)
                    </td>
                </tr>
                <tr>
                    <th class="col-md-3 active">
                        تماس با ما :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactUs)
                    </td>
                </tr>
                <tr>
                    <th class="col-md-3 active">
                        هزینه پیک :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReserveCourierPrice)
                    </td>
                </tr>
                <tr>
                    <th class="col-md-3 active">
                        هزینه رزرو میز و صندلی :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReserveTablePrice)
                    </td>
                </tr>
                <tr>
                    <th class="col-md-3 active">
                        لینک عکس رستوران :
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.PictureLink)
                    </td>
                </tr>
                <tr>
                    <th>

                    </th>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("جزییات", "Details", new { id = item.Id })
                    </td>
                </tr>
            </table>
        }
    </div>
</div>
