@model Restaurant.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "گذرواژه خود را فراموش کرده اید؟";
}





<h3 class="text-info">@ViewBag.Title</h3>

<div class="form-horizontal">
    <form action="ForgotPassword" method="post">
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <h5 class="text-primary">ایمیل خود را وارد نمایید.</h5><br>
        <div class="form-group">
            @Html.Label("ایمیل : ", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @*@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })*@
                <input type="email" name="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="ارسال گذرواژه جدید" />

                <br />
                @if (ViewBag.status == "T")
            {
                    <h5 class="text-success">گذرواژه جدید برای شما ارسال شد!</h5>
                }
                else if (ViewBag.status == "F")
                {
                    <h5 class="text-danger">خطا!</h5>
                }
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
