@model IEnumerable<Restaurant.Models.Entities.OrderList>

@{
    ViewBag.Title = "جزییات تمام سفارشات";
}
<p class="navbar-left">
    @Html.ActionLink("برگشت به پنل مدیریت سفارشات", "OrderPanel", "Admin")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        جزییات تمام سفارشات
    </div>
    <div class="panel-body">
        <div class="panel panel-info">
            <div class="panel-heading">
                اینجا محلی برای جستوجو می باشد
            </div>

            <div class="panel-body">
                <form action="/Admin/Panel/AOrderLists" method="post" class="form-inline">
                    ایمیل :
                    <input type="text" name="Email" placeholder="ایمیل" class="form-control" value="@ViewData["Email"]" /><hr />
                    تاریخ و ساعت ثبت : 
                    <input type="text" name="OrderDate" placeholder="تاریخ و ساعت ثبت" class="form-control" value="@ViewData["OrderDate"]" />
                    تاریخ و ساعت درخواست : 
                    <input type="text" name="Date" placeholder="تاریخ و ساعت درخواست" class="form-control" value="@ViewData["Date"]" />
                    <input type="submit" value="جستوجو" class="btn btn-info navbar-left" />
                </form>
            </div>
        </div>
        <hr />
        <hr />


        <table class="table table-hover table-condensed table-responsive">
            <tr class="active">
                <th>
                    ایمیل
                </th>
                <th>
                    نام غذا
                </th>
                <th>
                    تعداد
                </th>
                <th>
                    تاریخ و ساعت ثبت
                </th>
                <th>
                    تاریخ و ساعت درخواست
                </th>
                <th>
                    توضیحات
                </th>
                <th>
                    قیمت هر کدام
                </th>
                <th>
                    وضیعت پرداخت
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Food.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FoodCount)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Food.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPay)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("جزییات", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
