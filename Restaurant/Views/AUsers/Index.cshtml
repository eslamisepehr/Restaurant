@model IEnumerable<Restaurant.Models.Entities.AspNetUser>

@{
    ViewBag.Title = "کاربران";
}
<p class="navbar-left">
    @Html.ActionLink("برگشت به پنل مدیریت کاربران", "UserPanel", "Admin")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        کاربران
    </div>
    <div class="panel-body">
        <div class="panel panel-info">
            <div class="panel-heading">
                اینجا محلی برای جستوجو می باشد
            </div>

            <div class="panel-body">
                <form action="/Admin/Panel/AUsers" method="post" class="form-inline">
                    ایمیل :
                    <input type="text" name="Email" placeholder="ایمیل" class="form-control" value="@ViewData["Email"]" />
                    شماره تماس : 
                    <input type="text" name="PhoneNumber" placeholder="شماره تماس" class="form-control" value="@ViewData["PhoneNumber"]" />
                    <input type="submit" value="جستوجو" class="btn btn-info" />
                </form>
                <br />
                <form action="/Admin/Panel/AUserRoles" method="post" class="form-inline">
                    <input type="submit" name="Admin" value="نمایش ادمین ها" class="btn btn-success btn-sm" />
                </form>
            </div>
        </div>
        <hr />
        <hr />
        @Html.ActionLink("جدید","Create")
        <table class="table table-hover table-condensed table-responsive">
            <tr class="active">
                <th>
                    ایمیل
                </th>
                <th>
                    شماره تماس
                </th>
                <th>
                    دسترسی
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AspNetUserRole.RoleId)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("جزییات", "Details", new { id = item.Id }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>