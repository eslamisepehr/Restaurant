@model Restaurant.Models.RegisterViewModel
@{
    ViewBag.Title = "جدید";
}

<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        کاربران
    </div>
    <div class="panel-body">
        <h2>جدید</h2>
        <hr />
        @using (Html.BeginForm("Create", "AUsers", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>ساخت یک حساب کاربری جدید</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "ایمیل : ", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("شماره تماس : ", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    <input type="text" name="PhoneNumber" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, "گذرواژه : ", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, "تایید گذرواژه : ", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("دسترسی : ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("RoleId", null, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="جدید" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
