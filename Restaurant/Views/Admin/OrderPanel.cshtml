@{
    ViewBag.Title = "پنل مدیریت سفارشات";
}
<p class="navbar-left">
    @Html.ActionLink("برگشت به پنل ادمین", "Index")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        پنل مدیریت سفارشات
    </div>
    <div class="panel-body">
        <table class="table table-condensed table-responsive">
            <tr>
                <th>
                    <form action="/Admin/Panel/AOrders" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Order-1.png" />
                        <p>لیست سفارشات</p>
                    </form>
                </th>

                <th>
                    <form action="/Admin/Panel/AOrderLists" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Order-List.png" />
                        <p>لیست جزییات سفارشات</p>
                    </form>
                </th>

                <th>
                    <form action="/Admin/Panel/AOrderStatus" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Order-Status.png" />
                        <p>لیست وضیعت سفارش</p>
                    </form>
                </th>

                <th>
                    <form action="/Admin/Panel/AOrderTypes" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Order-Type.png" />
                        <p>لیست نحوه دریافت سفارش</p>
                    </form>
                </th>
            </tr>
        </table>
        
        <table class="table table-condensed table-responsive">
            <h2>روش های ارسال : </h2>
            <tr>

                <th>
                    <form action="/Admin/Panel/ACouriers" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Reservation-Courier.png" />
                        <p>پیک</p>
                    </form>
                </th>
                <th>
                    <form action="/Admin/Panel/ARestaurantTables" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Reservation-Table.png" />
                        <p>رزرو میز و صندلی</p>
                    </form>
                </th>
                <th>
                    <form action="/Admin/Panel/AGetInPlaces" method="post">
                        <input type="image" alt="Submit" src="~/Content/Image/Panel/Reservation-GetInPlace.png" />
                        <p>تحویل در رستوران</p>
                    </form>
                </th>
            </tr>
        </table>

    </div>
</div>