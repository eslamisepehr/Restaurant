@model Restaurant.Models.Entities.DiscountCode

@{
    ViewBag.Title = "حذف";
}
<p class="navbar-left">
    @Html.ActionLink("برگشت به لیست کد تخفیف", "Index")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        کد تخفیف
    </div>
    <div class="panel-body">
        <h2>حدف</h2>
        <hr />
        <p class="text-danger">
            آیا می خواهید این کد تخفیف را حذف کنید؟
        </p>
        <dl class="dl-horizontal">
            <dt>
                کد :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Code)
            </dd>

            <dt>
                درصد :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Persent)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="حذف" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
