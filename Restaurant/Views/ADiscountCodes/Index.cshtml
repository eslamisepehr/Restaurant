@model IEnumerable<Restaurant.Models.Entities.DiscountCode>

@{
    ViewBag.Title = "کد تخفیف";
}

<p class="navbar-left">
    @Html.ActionLink("برگشت به پنل ادمین",null,"Admin")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        کد تخفیف
    </div>
    <div class="panel-body">
        <p>
            @Html.ActionLink("جدید", "Create")
        </p>
        <table class="table table-hover table-condensed table-responsive">
            <tr class="active">
                <th>
                    کد
                </th>
                <th>
                    درصد
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Persent)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("جزییات", "Details", new { id = item.Id }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        
    </div>
</div>
