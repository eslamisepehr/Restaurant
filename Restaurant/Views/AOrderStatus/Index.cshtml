@model IEnumerable<Restaurant.Models.Entities.OrderStatu>

@{
    ViewBag.Title = "وضیعت سفارش";
}
<p class="navbar-left">
    @Html.ActionLink("برگشت به پنل مدیریت سفارشات", "OrderPanel", "Admin")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        وضیعت سفارش
    </div>
    <div class="panel-body">
        @Html.ActionLink("جدید", "Create")
        <table class="table table-hover table-condensed table-responsive">
            <tr class="active">
                <th>
                    نام
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
