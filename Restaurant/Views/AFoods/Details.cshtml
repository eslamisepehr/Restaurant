@model Restaurant.Models.Entities.Food

@{
    ViewBag.Title = "جزییات";
}
<p class="navbar-left">
    @Html.ActionLink("ویرایش", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("برگشت به لیست غذا ها", "Index")
</p>
<hr />
<div class="panel">
    <div class="panel-heading text-center border_Title_Basket">
        غذا ها
    </div>
    <div class="panel-body">
        <h2>جزییات</h2>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                نام :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                قیمت :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                توضیحات :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Describe)
            </dd>

            <dt>
                لینک عکس :
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Picture)
            </dd>

        </dl>
    </div>
</div>

